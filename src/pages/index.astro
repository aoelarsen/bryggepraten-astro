---
import Layout from '../layouts/Layout.astro';
import Prisliste from '../components/prisliste';
---

<Layout title='Bryggepraten.no'>
    <main class='p-4 mx-auto max-w-2xl grid gap-8'>
        <div>
            <h2 class=''>Velkommen til Bryggepraten!</h2>
            <p class='font-semibold'>Hansens og Larsen forunderlige verden</p>
        </div>
        <p>
            Her finner du også informasjon Bryggekanten forlag; et forlag som har gitt ut blant
            annet Bryggekanten bøkene
        </p>
        <section class='w-full'>
            <h3 class='text-xl'>Utgivelser</h3>

            <ul class='list-decimal list-inside'>
                <li>
                    <a
                        href='/utgivelser/bryggepraten-boka'
                        class='underline text-indigo-800 hover:text-indigo-600 dark:text-indigo-100 dark:hover:text-indigo-300'
                        >Bryggepraten boka</a
                    >
                </li>
                <li>
                    <a
                        href='/utgivelser/denne-fuglen-har-floyet'
                        class='underline text-indigo-800 hover:text-indigo-600 dark:text-indigo-100 dark:hover:text-indigo-300'
                        >Denne Fuglen Har Fløyet</a
                    >
                </li>
                <li>
                    <a
                        href='/utgivelser/veiene-inn'
                        class='underline text-indigo-800 hover:text-indigo-600 dark:text-indigo-100 dark:hover:text-indigo-300'
                        >Bryggepratens Håndbok &hyphen; Veiene Inn</a
                    >
                </li>
                <li>
                    <a
                        href='/utgivelser/liv-og-leven-pa-karia'
                        class='underline text-indigo-800 hover:text-indigo-600 dark:text-indigo-100 dark:hover:text-indigo-300'
                        >Liv og leven på Karia</a
                    >
                </li>
                <li>
                    <a
                        href='/utgivelser/dribble'
                        class='underline text-indigo-800 hover:text-indigo-600 dark:text-indigo-100 dark:hover:text-indigo-300'
                        >Dribble</a
                    >
                </li>
            </ul>
        </section>

        <Prisliste />
    </main>
</Layout>
